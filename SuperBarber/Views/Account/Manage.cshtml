@model EditNameFormModel

@{
    ViewBag.Title = "Profile";
}

<div class="row">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>
    <partial name="_AccountMenuPartial" />
        <div class="col-md-6">
            <form method="post">
                <div class="mb-3">
                    <label asp-for="FirstName" class="form-label">First name</label>
                    <input asp-for="FirstName" class="form-control">
                    <span asp-validation-for="FirstName" class="small text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="LastName" class="form-label">Last name</label>
                    <input asp-for="LastName" class="form-control">
                    <span asp-validation-for="LastName" class="small text-danger"></span>
                </div>

                <button type="submit" class="btn-submit-big">Save</button>
            </form>
        </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
