@model EditEmailFormModel

@{
    ViewBag.Title = "Manage Email";
}

<div class="row">
    <h2 class="heading-margin text-center">@ViewBag.Title</h2>
    <partial name="_AccountMenuPartial" />
    <div class="col-md-6">
        <form method="post">
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control">
                <span asp-validation-for="Email" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmEmail" class="form-label">Confirm email</label>
                <input asp-for="ConfirmEmail" class="form-control">
                <span asp-validation-for="ConfirmEmail" class="small text-danger"></span>
            </div>

            <button type="submit" class="btn-submit-big">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
