@model OrderViewModel
@{
    ViewData["Title"] = "Orders";
    ViewBag.Title = "Orders";
    ViewBag.IsBarber = true;
}

<div class="row">
    <h2 class="heading-margin text-center">@ViewBag.Title</h2>

    <div asp-validation-summary="ModelOnly" class="text-danger text-center list-error"></div>

    <div class="col">
        <table class="table">
            <thead>
                <tr>
                    <th class="table-text" scope="col">#</th>
                    <th class="table-text" scope="col">Barbershop</th>
                    <th class="table-text" scope="col">Client first name</th>
                    <th class="table-text" scope="col">Client last name</th>
                    <th class="table-text" scope="col">Client phone number</th>
                    <th class="table-text" scope="col">Client email</th>
                    <th class="table-text" scope="col">Service name</th>
                    <th class="table-text" scope="col">Price</th>
                    <th class="table-text" scope="col">Date</th>
                    <th class="table-text" scope="col">Status</th>
                    <th class="table-text" scope="col">Cancel order</th>
                </tr>
            </thead>
            <tbody>
                <partial name="_OrdersPartial" model="@Model.Orders" />
            </tbody>
        </table>
    </div>
    <partial name="_PageButtonsOrdersPartial" model="@Model" />
</div>
