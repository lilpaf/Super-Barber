@model AddBarberFormModel

@{
    ViewBag.Title = "Become Barber";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>
        <form method="post">
            <div class="mb-3">
                <label asp-for="FullName" class="form-label">Full Name</label>
                <input asp-for="FullName" class="form-control">
                <span asp-validation-for="FullName" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="+359 2 304 0010">
                <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
            </div>
           
            <button type="submit" class="btn-submit-big">Add</button>
        </form>
    </div>
</div>
