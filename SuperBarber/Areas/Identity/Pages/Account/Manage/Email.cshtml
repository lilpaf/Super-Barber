@page
@model EmailModel
@{
    ViewBag.Title = "Manage Email";
}

<div class="row">
    <h2 class="heading-margin">@ViewBag.Title</h2>
    <div class="col-md-6">
        <form method="post">
            <div class="mb-3">
                <label asp-for="Input.NewEmail" class="form-label">Email</label>
                <input asp-for="Input.NewEmail" class="form-control">
                <span asp-validation-for="Input.NewEmail" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.ConfirmEmail" class="form-label">Confirm email</label>
                <input asp-for="Input.ConfirmEmail" class="form-control">
                <span asp-validation-for="Input.ConfirmEmail" class="small text-danger"></span>
            </div>

            <button type="submit" class="btn-submit-big" asp-page-handler="ChangeEmail">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
