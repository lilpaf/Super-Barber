@model AllBarberShopQueryModel

@{
    ViewData["Title"] = "Barbershops administration";
    ViewBag.Title = "Barbershops administration";
    ViewBag.CanEdit = true;
}

@if (Model.BarberShops.Count() == 0)
{
    <div class="container-fluid py-5 text-center">
        <h1 class="display-5 fw-bold">Welcome to Super Barber administrator area</h1>
        <p class="fs-3">Right now you do not have any barbershops to approve.</p>
        <a asp-controller="Home" asp-action="Index" asp-area="" button class="btn btn-primary btn-lg" type="button">Back to home</a>
    </div>
}
else
{
    <form method="get">
        <div class="row mb-5">
            <div class="mb-3 col-md-3">
                <label asp-for="SearchTerm" class="form-label">Search by name</label>
                <input asp-for="SearchTerm" class="form-control">
            </div>
            <div class="mb-3 col-md-3">
                <label asp-for="City" class="form-label">Search by city</label>
                <select asp-for="City" class="form-select">
                    <option value="">All</option>

                    @foreach (var city in Model.Cities)
                    {
                        <option value="@city">@city</option>
                    }
                </select>
            </div>
            <div class="mb-3 col-md-3">
                <label asp-for="Sorting" class="form-label">Sort by</label>
                <select asp-for="Sorting" class="form-select">
                    <option value="0" selected>Name</option>
                    <option value="1">City</option>
                </select>
            </div>
            <div class="mb-3 col-md-3 btn-search-margin">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>

    <div asp-validation-summary="ModelOnly" class="text-danger text-center list-error"></div>

    <h2 class="heading-margin text-center">@ViewBag.Title</h2>

    <partial name="_BarberShopsPartial" model="@Model.BarberShops" />

    <partial name="_PageButtonsPartial" model="@Model" />
}
